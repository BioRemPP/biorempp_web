# ============================================================================
# biorempp.conf - Configuração do Site BioRemPP (SEM DOCKER)
# ============================================================================
# INSTRUÇÕES DE INSTALAÇÃO:
# 1. Copiar para Nginx: sudo cp biorempp.conf.production /etc/nginx/sites-available/biorempp
# 2. Criar link simbólico: sudo ln -sf /etc/nginx/sites-available/biorempp /etc/nginx/sites-enabled/biorempp
# 3. Remover default (opcional): sudo rm -f /etc/nginx/sites-enabled/default
# 4. Testar: sudo nginx -t
# 5. Recarregar: sudo nginx -s reload
# ============================================================================
#
# CONFIGURAÇÕES PERSONALIZÁVEIS:
# - server_name: Altere para seu domínio real (ex: biorempp.exemplo.com)
# - client_max_body_size: Aumente se precisar uploads > 100MB
# - Timeouts: Aumente se análises demorarem > 5 minutos
# - SSL: Descomente seção HTTPS se tiver certificado SSL
# ============================================================================

server {
    listen 80;
    listen [::]:80;

    # Domínio de produção: biorempp.cloud
    # IP público: 159.203.108.228
    # Configuração inicial: aceita tanto IP quanto domínio
    server_name biorempp.cloud www.biorempp.cloud 159.203.108.228;

    # ========================================================================
    # REDIRECT HTTPS (descomente quando tiver SSL configurado)
    # ========================================================================
    # return 301 https://$server_name$request_uri;

    # ========================================================================
    # LIMITES DE UPLOAD
    # ========================================================================
    # IMPORTANTE: Este valor DEVE ser >= BIOREMPP_UPLOAD_MAX_SIZE_MB no .env
    # .env tem BIOREMPP_UPLOAD_MAX_SIZE_MB=100, então 100M aqui está correto
    # Se aumentar no .env, aumente aqui também!
    client_max_body_size 100M;

    # ========================================================================
    # SECURITY HEADERS
    # ========================================================================
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;

    # ========================================================================
    # HEALTH CHECK ENDPOINT
    # ========================================================================
    # Usado para monitoramento - não tem rate limiting
    location /health {
        proxy_pass http://biorempp_app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Sem rate limiting para health checks
        access_log off;
    }

    # ========================================================================
    # STATIC ASSETS (CSS, JS, Images)
    # ========================================================================
    # Cache agressivo para assets estáticos
    location ~* ^/assets/.+\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://biorempp_app;
        proxy_set_header Host $host;

        # Cache por 1 ano
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # ========================================================================
    # DASH CALLBACKS (API Endpoints)
    # ========================================================================
    # Dash usa endpoints /_dash-* para callbacks AJAX
    # Rate limiting mais permissivo para callbacks intensivos
    location ~* ^/_dash-.* {
        # Rate limiting: 50 burst (picos de requisições)
        limit_req zone=api burst=50 nodelay;
        limit_req_status 429;

        proxy_pass http://biorempp_app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (necessário para Dash callbacks em tempo real)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # ====================================================================
        # TIMEOUTS PARA ANÁLISES LONGAS
        # ====================================================================
        # IMPORTANTE: Estes valores DEVEM ser >= BIOREMPP_TIMEOUT no .env
        # .env tem BIOREMPP_TIMEOUT=300 (5 minutos)
        #
        # Se suas análises demorarem mais de 5 minutos:
        # 1. Aumente BIOREMPP_TIMEOUT no .env (ex: 600 para 10 minutos)
        # 2. Aumente estes timeouts aqui também
        # ====================================================================
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;     # 5 minutos - AUMENTAR se necessário
        proxy_read_timeout 300s;     # 5 minutos - AUMENTAR se necessário
    }

    # ========================================================================
    # MAIN APPLICATION
    # ========================================================================
    location / {
        # Rate limiting: 100 burst (carregamento inicial da página)
        limit_req zone=general burst=100 nodelay;
        limit_req_status 429;

        proxy_pass http://biorempp_app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts (aumentar se análises demorarem mais)
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;     # AUMENTAR se análises > 5 min
        proxy_read_timeout 300s;     # AUMENTAR se análises > 5 min
    }

    # ========================================================================
    # ERROR PAGES
    # ========================================================================
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;

    location = /50x.html {
        root /usr/share/nginx/html;
    }
}

